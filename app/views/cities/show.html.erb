<p id="notice"><%= notice %></p>

<div class="row-fluid">
	<div class="span12">
		<div id="group-show-title">	
			<%= @city.name %>
		</div>	
	</div>
</div>


	

<div class="row-fluid">
	<div class="span12">
		<div id="group-hello-member">	
		 Welcome! There are <%= @city.groups.count %> networking groups in <%= @city.name %>
		</div>	
	</div>
</div>

<div class="row-fluid">
<div class="span12">
List of Groups:<br>
<% @city.groups.each do |group| %>
<%= link_to group.name, city_group_path(@city, group.id) %>
<%= group.memberships.count %>/12  
<% if group.users.where(:industry => current_user.industry).exists? %>
Taken
<% else %>
Available
<% end %>


<% end %>
</div>
</div>
