<div class="container">
	<div class="row-fluid">
		<div class="span4 offset4">

<center><h2>Sign up</h2></center>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="ui form segment">
  <div class="field">
    <label><%= f.label :email %></label>
    <div class="ui left labeled icon input">
        <%= f.email_field :email, :autofocus => true, :class => "field-style" %>
      <i class="user icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
    </div>
  </div>
  <div class="field">
    <label><%= f.label :password %></label>
    <div class="ui left labeled icon input">
      <%= f.password_field :password, :class => "field-style"  %>
      <i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
    </div>
  </div>
  <div class="field">
    <label><%= f.label :password_confirmation %></label>
    <div class="ui left labeled icon input">
      <%= f.password_field :password_confirmation, :class => "field-style"  %>
      <i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
    </div>
  </div>
  <div class="ui error message">
    <div class="header">We noticed some issues</div>
  </div>

<div><%= f.submit "Sign up", :class => "ui blue submit button" %></div>
</div>

<%= render "devise/shared/links" %>
<% end %>

			</div>
		</div>
	</div>		