<div class="container">
	<div class="row-fluid">
		<div class="span4 offset4">

<center><h2>Sign in</h2></center>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

<div class="ui form segment">
  <div class="field">
    <label><%= f.label :email %></label>
    <div class="ui left labeled icon input">
        <%= f.email_field :email, :autofocus => true, :class => "field-style" %>
      <i class="user icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
    </div>
  </div>
  <div class="field">
    <label><%= f.label :password %></label>
    <div class="ui left labeled icon input">
      <%= f.password_field :password, :class => "field-style"  %>
      <i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
    </div>
  </div>
  
  <div class="ui error message">
    <div class="header">We noticed some issues</div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "ui blue submit button" %></div>
<% end %>

<%= render "devise/shared/links" %>

		</div>
	</div>
</div>