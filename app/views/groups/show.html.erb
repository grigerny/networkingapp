<div id="group-show-background">
	<div class="group-name-title">
		<%= @group.name %>
	</div>
</div>

<div class="row-fluid">
<div class="span12">

</div>
</div>

</div>
<div class="container">
		<%= flash[:notice] %>
	<div class="row-fluid">
	<div class="span12">
		<h2>Information</h2>	
		<b>Venue:</b> <%= @group.venue %><br>
		<b>Address:</b> <%= @group.address%><br>
		<b>Schedule:</b> <%= @group.time %>
	</div>
	</div>
	
<h2>Stats</h2>	
<b>Members:</b> <%= @group.memberships.count %><br>
<b>Industries represented:</b>

<% @group.memberships.each do |members| %>
<div class="industry-css">
<%= members.user.industry %>
</div>
<% end %>


<% if user_signed_in? %>	

<div class="row-fluid">
	<div class="span12">
		<% if @group.memberships.count < 13 && unless @group.users.where(:email => "#{current_user.email}").exists? %>
		<div id="group-join-button">
			<%= link_to "Join Group", join_city_group_path(@group.city.id,@group) %><br>	
		</div>	
		<% else %>
		<div id="group-join-button">
			<%= link_to "Leave Group", unjoin_city_group_path(@group.city.id,@group) %><br>	
		</div>
		<% end %>
		<% end %>
	</div>
</div>	

<% if @group.users.where(:email => "#{current_user.email}").exists? %>

<div class="row-fluid">
<div class="span12">
	The members of this group are:<br>
	<% @group.memberships.each do |members| %><br>
	<%= members.user.first_name %> <%= members.user.last_name %>
	<% end %>
</div>
</div>
<%= link_to "Edit", edit_group_path%>

<% end %>
<% end %>



